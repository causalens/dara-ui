{
    "exclude": ["**/*.spec.tsx", "dist/**"],
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "preserveSymlinks": true,
        "rootDir": "./src/",
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6",
    }
}
