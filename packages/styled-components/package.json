{
  "name": "@darajs/styled-components",
  "version": "1.0.1",
  "description": "CL wrapper around styled components so everything gets the same instance",
  "main": "dist/index.js",
  "license": "Apache-2.0",
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "eslint src --ext .tsx --max-warnings 0 && stylelint './src/**/*.tsx'",
    "lint:fix": "eslint src --ext .tsx --max-warnings 0 --fix",
    "package": "yarn build && yarn publish --no-git-tag-version"
  },
  "prettier": "@darajs/prettier-config",
  "devDependencies": {
    "@darajs/eslint-config": "^1.0.1",
    "@darajs/prettier-config": "^1.0.1",
    "@darajs/stylelint-config": "^1.0.1",
    "@types/styled-components": "^5.1.26",
    "eslint": "^7.32.0",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.5.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "polished": "^4.1.1",
    "styled-components": "^5.3.10"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
